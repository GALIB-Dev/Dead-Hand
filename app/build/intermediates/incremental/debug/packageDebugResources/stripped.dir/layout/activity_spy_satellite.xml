<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:fillViewport="true"
    tools:context=".SpySatelliteActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Spy Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#1a1a1a"
            android:padding="16dp"
            android:layout_marginBottom="24dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="🛰️ SATELLITE SURVEILLANCE"
                android:textColor="#00FF00"
                android:textSize="18sp"
                android:fontFamily="monospace"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CLASSIFIED"
                android:textColor="#FF0000"
                android:textSize="12sp"
                android:fontFamily="monospace"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Mission Status -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#1a1a1a"
            android:padding="16dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="MISSION STATUS: ACTIVE"
                android:textColor="#00FF00"
                android:textSize="14sp"
                android:fontFamily="monospace"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TARGET COORDINATES:"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:fontFamily="monospace"
                android:layout_marginBottom="4dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="LAT: 40.7128° N"
                android:textColor="#00FFFF"
                android:textSize="12sp"
                android:fontFamily="monospace" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="LON: 74.0060° W"
                android:textColor="#00FFFF"
                android:textSize="12sp"
                android:fontFamily="monospace" />
        </LinearLayout>

        <!-- Satellite View Placeholder -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:orientation="vertical"
            android:background="#0a0a0a"
            android:gravity="center"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="🌍"
                android:textSize="64sp"
                android:layout_marginBottom="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SATELLITE FEED"
                android:textColor="#00FF00"
                android:textSize="16sp"
                android:fontFamily="monospace"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="[API KEY REQUIRED]"
                android:textColor="#FF6600"
                android:textSize="12sp"
                android:fontFamily="monospace" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Configure Google Maps API"
                android:textColor="#FF6600"
                android:textSize="10sp"
                android:fontFamily="monospace" />
        </LinearLayout>

        <!-- Control Panel -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#1a1a1a"
            android:padding="16dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SURVEILLANCE CONTROLS"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:fontFamily="monospace"
                android:textStyle="bold"
                android:layout_marginBottom="16dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="ZOOM IN"
                    android:textColor="#000000"
                    android:backgroundTint="#00FF00"
                    android:fontFamily="monospace"
                    android:textStyle="bold"
                    android:layout_marginEnd="8dp" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="ZOOM OUT"
                    android:textColor="#000000"
                    android:backgroundTint="#00FF00"
                    android:fontFamily="monospace"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="SCAN MODE"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="#333333"
                    android:fontFamily="monospace"
                    android:textStyle="bold"
                    android:layout_marginEnd="8dp" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="TRACK TARGET"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="#333333"
                    android:fontFamily="monospace"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

        <!-- Intel Report -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#1a1a1a"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="INTELLIGENCE REPORT"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:fontFamily="monospace"
                android:textStyle="bold"
                android:layout_marginBottom="12dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• Target Area: Urban Environment"
                android:textColor="#00FFFF"
                android:textSize="12sp"
                android:fontFamily="monospace"
                android:layout_marginBottom="4dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• Weather: Clear Visibility"
                android:textColor="#00FFFF"
                android:textSize="12sp"
                android:fontFamily="monospace"
                android:layout_marginBottom="4dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• Security Level: HIGH ALERT"
                android:textColor="#FF0000"
                android:textSize="12sp"
                android:fontFamily="monospace"
                android:layout_marginBottom="4dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• Last Update: REAL-TIME"
                android:textColor="#00FF00"
                android:textSize="12sp"
                android:fontFamily="monospace" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>