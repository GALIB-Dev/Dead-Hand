<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:fillViewport="true"
    tools:context=".SpyProfileActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Spy Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#1a1a1a"
            android:padding="16dp"
            android:layout_marginBottom="24dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="👤 AGENT PROFILE"
                android:textColor="#00FF00"
                android:textSize="20sp"
                android:fontFamily="monospace"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TOP SECRET"
                android:textColor="#FF0000"
                android:textSize="12sp"
                android:fontFamily="monospace"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Agent Photo Placeholder -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="vertical"
            android:background="#0a0a0a"
            android:gravity="center"
            android:layout_marginBottom="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="🕵️‍♂️"
                android:textSize="64sp"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CLASSIFIED AGENT"
                android:textColor="#00FF00"
                android:textSize="14sp"
                android:fontFamily="monospace"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Personal Information -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#1a1a1a"
            android:padding="16dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="📋 AGENT INFORMATION"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:fontFamily="monospace"
                android:textStyle="bold"
                android:layout_marginBottom="16dp" />

            <!-- Name -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="NAME:"
                    android:textColor="#00FFFF"
                    android:textSize="12sp"
                    android:fontFamily="monospace"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/editName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Mohammad Al Galib"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp"
                    android:fontFamily="monospace"
                    android:background="#333333"
                    android:padding="8dp" />
            </LinearLayout>

            <!-- Age -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="AGE:"
                    android:textColor="#00FFFF"
                    android:textSize="12sp"
                    android:fontFamily="monospace"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/editAge"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="17"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp"
                    android:fontFamily="monospace"
                    android:background="#333333"
                    android:padding="8dp"
                    android:inputType="number" />
            </LinearLayout>

            <!-- Location -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="LOCATION:"
                    android:textColor="#00FFFF"
                    android:textSize="12sp"
                    android:fontFamily="monospace"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/editLocation"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Bangladesh"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp"
                    android:fontFamily="monospace"
                    android:background="#333333"
                    android:padding="8dp" />
            </LinearLayout>

            <!-- Phone -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="PHONE:"
                    android:textColor="#00FFFF"
                    android:textSize="12sp"
                    android:fontFamily="monospace"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/editPhone"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="+880 XXX-XXX-XXXX"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp"
                    android:fontFamily="monospace"
                    android:background="#333333"
                    android:padding="8dp"
                    android:inputType="phone" />
            </LinearLayout>

            <!-- Email -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="EMAIL:"
                    android:textColor="#00FFFF"
                    android:textSize="12sp"
                    android:fontFamily="monospace"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/editEmail"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="mohammad.galib@classified.gov"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp"
                    android:fontFamily="monospace"
                    android:background="#333333"
                    android:padding="8dp"
                    android:inputType="textEmailAddress" />
            </LinearLayout>
            <!-- Birth Date & Age Display -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="12dp"
                android:background="#0a0a0a"
                android:padding="12dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="📅 BIRTH: January 1, 2007"
                    android:textColor="#00FFFF"
                    android:textSize="12sp"
                    android:fontFamily="monospace"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/ageDisplay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="🎂 CALCULATING AGE..."
                    android:textColor="#00FF00"
                    android:textSize="11sp"
                    android:fontFamily="monospace"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>

        <!-- Medical Information -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#1a1a1a"
            android:padding="16dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="🩸 MEDICAL PROFILE"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:fontFamily="monospace"
                android:textStyle="bold"
                android:layout_marginBottom="12dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• Blood Type: O+ (Universal Donor)"
                android:textColor="#FF0000"
                android:textSize="12sp"
                android:fontFamily="monospace"
                android:layout_marginBottom="4dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• Medical Conditions: NONE"
                android:textColor="#00FF00"
                android:textSize="12sp"
                android:fontFamily="monospace"
                android:layout_marginBottom="4dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• Physical Status: COMBAT READY"
                android:textColor="#00FF00"
                android:textSize="12sp"
                android:fontFamily="monospace"
                android:layout_marginBottom="4dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• Health Clearance: APPROVED"
                android:textColor="#00FFFF"
                android:textSize="12sp"
                android:fontFamily="monospace" />

        </LinearLayout>

        <!-- Security Clearance -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#1a1a1a"
            android:padding="16dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="🔐 SECURITY CLEARANCE"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:fontFamily="monospace"
                android:textStyle="bold"
                android:layout_marginBottom="12dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• Clearance Level: TOP SECRET"
                android:textColor="#FF0000"
                android:textSize="12sp"
                android:fontFamily="monospace"
                android:layout_marginBottom="4dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• Access Code: DEAD-HAND-PROTOCOL"
                android:textColor="#00FF00"
                android:textSize="12sp"
                android:fontFamily="monospace"
                android:layout_marginBottom="4dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• Authorization: NUCLEAR SYSTEMS"
                android:textColor="#FF6600"
                android:textSize="12sp"
                android:fontFamily="monospace"
                android:layout_marginBottom="4dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• Device: Realme 8 (Secured)"
                android:textColor="#00FFFF"
                android:textSize="12sp"
                android:fontFamily="monospace" />
        </LinearLayout>

        <!-- Mission Status -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#1a1a1a"
            android:padding="16dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="🎯 MISSION STATUS"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:fontFamily="monospace"
                android:textStyle="bold"
                android:layout_marginBottom="12dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• Current Mission: INTELLIGENCE GATHERING"
                android:textColor="#00FF00"
                android:textSize="12sp"
                android:fontFamily="monospace"
                android:layout_marginBottom="4dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• Operations Completed: 27"
                android:textColor="#00FFFF"
                android:textSize="12sp"
                android:fontFamily="monospace"
                android:layout_marginBottom="4dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• Success Rate: 98.7%"
                android:textColor="#00FF00"
                android:textSize="12sp"
                android:fontFamily="monospace"
                android:layout_marginBottom="4dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• Last Login: Today"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:fontFamily="monospace" />
        </LinearLayout>

        <!-- Save Button -->
        <Button
            android:id="@+id/saveProfileButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="💾 SAVE PROFILE"
            android:textColor="#000000"
            android:backgroundTint="#00FF00"
            android:fontFamily="monospace"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginBottom="16dp" />

        <!-- Footer -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="⚠️ CLASSIFIED INFORMATION - AUTHORIZED PERSONNEL ONLY"
            android:textColor="#FF0000"
            android:textSize="10sp"
            android:fontFamily="monospace"
            android:textStyle="bold"
            android:gravity="center"
            android:padding="8dp"
            android:background="#333333" />

    </LinearLayout>
</ScrollView>